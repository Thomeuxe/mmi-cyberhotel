{% extends '::base.html.twig' %}
{% block title %}Liste des hotels{% endblock %}
{% block body %}
	<ul>
    {% for hotel in hotels %}
    	<a href="{{ path('hotel.detail', { 'ville': hotel.ville }) }}">
	    	<li>
        	<h2>{{ hotel.ville }} ({{ hotel.chambres.count }} chambres)</h2>
    	    </li>
        </a>
    {% endfor %}
	</ul>
{% endblock %}
